{{ define "styles" }}<%= htmlWebpackPlugin.tags.headTags %>{{ end }}
{{ define "scripts" }}<%= htmlWebpackPlugin.tags.bodyTags %>{{ end }}

{{ define "logo-mode" -}} full {{- end }}

{{ define "content" }}
<div class="hp page-container">
   <section class="hp__popular popular container" aria-label="popular posts">
      <ul class="popular__list">
         {{ range $i, $a := makeSlice 4 }}
         <li class="popular__item">
            <article class="popular-post">
               <a class="popular-post__link" href="#">
                  <figure class="popular-post__figure">
                     <img class="popular-post__img" src="https://picsum.photos/1200/800?{{ $i }}" width="1200"
                        height="800" alt="post's title" {{ if ge $i 2 }} loading="lazy" {{ end }}>
                     <figcaption class="popular-post__label">
                        <div class="popular-post__meta">
                           <div class="popular-post__category category">News</div>
                           <tim class="popular-post__date" datetime="">March 15, 2018</time>
                        </div>
                        <strong class="popular-post__title h3">There's a New Way to Make titles to posts Lorem ipsum
                           dolor
                           sit, amet consectetur adipisicing elit. Ab vel quia reprehenderit quas nisi facere
                           consequuntur et quos pariatur eius.</strong>
                        <p class="popular-post__description">Lorem ipsum dolor sit amet consectetur adipisicing elit.
                           Quibusdam ipsum at nemo facilis, eos rem nulla nihil itaque adipisci, nisi mollitia quam
                           possimus architecto!</p>
                     </figcaption>
                  </figure>
               </a>
            </article>
         </li>
         {{ end }}
      </ul>
   </section>

   <div class="hp__main-flow main-flow container">
      <main class="main-flow__main">
         <h1 class="hp__section-title h1" id="posts-list-title">Latest posts</h1>
         <section class="posts-list">
            <ul class="posts-list__list">
               {{ range $i, $a := makeSlice 10 }}
               <li class="posts-list__item">
                  <article class="post">
                     <a class="post__list" href="#">
                        <figure class="post__figure">
                           <div class="post__img-container">
                              <img class="post__img" src="https://picsum.photos/500/350?{{ $i }}" width="500"
                                 height="350" alt="title" loading="lazy">
                           </div>
                           <figcaption class="post__label">
                              <div class="post__meta">
                                 <div class="category">Guide</div>
                                 <time class="post__date" datetime="">March 15, 2018</time>
                              </div>
                              <strong class="post__title">There's a New Way to Make titles to posts Lorem ipsum
                                 dolor</strong>
                           </figcaption>
                        </figure>
                     </a>
                  </article>
               </li>
               {{ end }}
            </ul>

            <a class="posts-list__more link link--arrow" href="/posts">
               See all posts
               <svg class="link__arrow icon icon-arrow-right2">
                  <use xlink:href="#icon-arrow-right2"></use>
               </svg>
            </a>
         </section>
      </main>

      <aside class="main-flow__aside">{{ template "info-aside" . }}</aside>
   </div>
</div>
{{ end }}